---
import Layout from "../../layouts/Layout.astro";
import ProductCard from "../../components/ProductCard.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
    const posts = await getCollection("blog");
    return posts.map((post) => ({
        params: { slug: post.slug },
        props: { post },
    }));
}

const { post } = Astro.props;
const { Content } = await post.render();

// Fetch related products if any
let relatedProducts: Awaited<ReturnType<typeof getCollection<"products">>> = [];
if (post.data.relatedProducts) {
    const allProducts = await getCollection("products");
    relatedProducts = allProducts.filter((p) =>
        post.data.relatedProducts?.includes(p.slug),
    );
}
---

<Layout
    title={`${post.data.title} | SasaGadgets Blog`}
    description={post.data.description}
    image={post.data.image}
>
    <article class="max-w-4xl mx-auto py-12">
        <div class="mb-8 text-center">
            <p
                class="text-sm text-emerald-600 font-bold uppercase tracking-wider mb-2"
            >
                {post.data.pubDate.toLocaleDateString()} â€¢ {post.data.author}
            </p>
            <h1
                class="text-4xl md:text-5xl font-black text-slate-900 mb-6 leading-tight"
            >
                {post.data.title}
            </h1>
            {
                post.data.image && (
                    <img
                        src={post.data.image}
                        alt={post.data.title}
                        class="w-full h-64 md:h-96 object-cover rounded-2xl shadow-lg mb-8"
                    />
                )
            }
        </div>

        <div class="prose prose-lg prose-slate mx-auto mb-16">
            <Content />
        </div>

        {
            relatedProducts.length > 0 && (
                <>
