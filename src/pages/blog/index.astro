---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("blog");
---

<Layout title="Tech Blog - Reviews & Guides | SasaGadgets">
    <div class="text-center mb-16">
        <h1 class="text-4xl font-black text-slate-900 mb-4">Tech Insights</h1>
        <p class="text-lg text-gray-600">
            Expert advice on buying laptops and phones in Kenya.
        </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
            posts.map((post) => (
                <a
                    href={`/blog/${post.slug}`}
                    class="group block bg-white border border-gray-100 rounded-2xl overflow-hidden hover:shadow-xl transition-all duration-300"
                >
                    <div class="h-48 overflow-hidden">
                        {post.data.image && (
                            <img
                                src={post.data.image}
                                alt={post.data.title}
                                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                            />
                        )}
                    </div>
                    <div class="p-6">
                        <p class="text-xs text-emerald-600 font-bold uppercase mb-2">
                            {post.data.pubDate.toLocaleDateString()}
                        </p>
                        <h2 class="text-xl font-bold text-slate-900 mb-2 group-hover:text-emerald-600 transition-colors">
                            {post.data.title}
                        </h2>
                        <p class="text-gray-600 text-sm line-clamp-3">
                            {post.data.description}
                        </p>
                    </div>
                </a>
            ))
        }
    </div>
</Layout>
