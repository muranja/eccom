---
import Layout from "../../layouts/Layout.astro";
import { AddToCartButton } from "../../components/AddToCartButton";
import { FloatingCartButton } from "../../components/FloatingCartButton";
import { CartPreview } from "../../components/CartPreview";
import { ErrorBoundary } from "../../components/ErrorBoundary";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
    const products = await getCollection("products");
    return products.map((product) => ({
        params: { slug: product.slug },
        props: { product },
    }));
}

const { product } = Astro.props;
const { Content } = await product.render();

const PHONE_NUMBER = "254714389231";

// Product Schema for SEO
const productSchema = {
    "@context": "https://schema.org",
    "@type": "Product",
    name: product.data.name,
    image: product.data.image,
    description: `${product.data.name} available in Kenya at competitive prices.`,
    brand: {
        "@type": "Brand",
        name: product.data.brand,
    },
    offers: {
        "@type": "Offer",
        url: `https://sasagadgets.com/shop/${product.slug}`,
        priceCurrency: "KES",
        price: product.data.price,
        availability: product.data.inStock
            ? "https://schema.org/InStock"
            : "https://schema.org/OutOfStock",
        seller: {
            "@type": "Organization",
            name: "SasaGadgets",
        },
    },
};

// WhatsApp pre-filled message
const whatsappMessage = encodeURIComponent(
    `Hi! I'd like to purchase the ${product.data.name} (KES ${product.data.price.toLocaleString()}). Is it still in stock?`,
);
const whatsappUrl = `https://wa.me/${PHONE_NUMBER}?text=${whatsappMessage}`;
---

<Layout
    title={`${product.data.name} | SasaGadgets`}
    description={`Buy ${product.data.name} in Kenya. ${product.data.name} price in Kenya - KES ${product.data.price.toLocaleString()}.`}
    image={product.data.image}
    jsonLd={productSchema}
>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 py-8">
        <!-- Image Section -->
        <div
            class="relative bg-white rounded-2xl shadow-sm border border-gray-100 p-4 h-fit"
        >
            {
                product.data.image && (
                    <img
                        src={product.data.image}
                        alt={product.data.name}
                        loading="eager"
                        class="w-full h-auto rounded-lg"
                    />
                )
            }
        </div>

        <!-- Details Section -->
        <div>
            <span
                class="inline-block bg-emerald-100 text-emerald-700 px-3 py-1 rounded-full text-sm font-bold mb-4 uppercase tracking-wide"
            >
                {product.data.category}
            </span>
            <h1 class="text-4xl font-black text-slate-900 mb-2">
                {product.data.name}
            </h1>
            <p class="text-3xl font-extrabold text-emerald-600 mb-6">
                KES {product.data.price.toLocaleString()}
            </p>

            <div class="prose prose-slate prose-lg mb-8 text-gray-600">
                <Content />
            </div>

            <div class="border-t border-gray-200 pt-6 space-y-3 pb-24 md:pb-6">
                <!-- Add to Cart Button -->
                <AddToCartButton
                    client:load
                    product={{ id: product.slug, ...product.data }}
                />

                <!-- WhatsApp Direct Contact -->
                <a
                    href={whatsappUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="w-full bg-green-500 hover:bg-green-600 text-white font-bold py-3 px-6 rounded-lg transition-all flex items-center justify-center gap-2 shadow-sm active:scale-95"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-5 w-5"
                        fill="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
