---
/**
 * Product Specifications Table
 * Displays key product specs in a visual grid with icons
 */
interface Props {
    storage?: number;
    ram?: number;
    battery?: number;
    screenSize?: number;
    camera?: string;
}

const { storage, ram, battery, screenSize, camera } = Astro.props;

// Check if any specs exist
const hasSpecs = storage || ram || battery || screenSize || camera;
---

{
    hasSpecs && (
        <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-5 gap-3 mb-6 p-4 bg-slate-50 rounded-xl border border-slate-200">
            {storage && (
                <div class="flex flex-col items-center p-3 bg-white rounded-lg border border-slate-100 shadow-sm">
                    <svg
                        class="w-5 h-5 text-slate-600 mb-1"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"
                        />
                    </svg>
                    <span class="text-xs text-slate-500 uppercase tracking-wide">
                        Storage
                    </span>
                    <span class="font-bold text-slate-900">{storage}GB</span>
                </div>
            )}
            {ram && (
                <div class="flex flex-col items-center p-3 bg-white rounded-lg border border-slate-100 shadow-sm">
                    <svg
                        class="w-5 h-5 text-slate-600 mb-1"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"
                        />
                    </svg>
                    <span class="text-xs text-slate-500 uppercase tracking-wide">
                        RAM
                    </span>
                    <span class="font-bold text-slate-900">{ram}GB</span>
                </div>
            )}
            {battery && (
                <div class="flex flex-col items-center p-3 bg-white rounded-lg border border-slate-100 shadow-sm">
                    <svg
                        class="w-5 h-5 text-slate-600 mb-1"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M3 7h14a1 1 0 011 1v8a1 1 0 01-1 1H3a1 1 0 01-1-1V8a1 1 0 011-1zm18 4v2"
                        />
                    </svg>
                    <span class="text-xs text-slate-500 uppercase tracking-wide">
                        Battery
                    </span>
                    <span class="font-bold text-slate-900">{battery}mAh</span>
                </div>
            )}
            {screenSize && (
                <div class="flex flex-col items-center p-3 bg-white rounded-lg border border-slate-100 shadow-sm">
                    <svg
                        class="w-5 h-5 text-slate-600 mb-1"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                        />
                    </svg>
                    <span class="text-xs text-slate-500 uppercase tracking-wide">
                        Screen
                    </span>
                    <span class="font-bold text-slate-900">{screenSize}"</span>
                </div>
            )}
            {camera && (
                <div class="flex flex-col items-center p-3 bg-white rounded-lg border border-slate-100 shadow-sm">
                    <svg
                        class="w-5 h-5 text-slate-600 mb-1"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"
                        />
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"
                        />
                    </svg>
                    <span class="text-xs text-slate-500 uppercase tracking-wide">
                        Camera
                    </span>
                    <span class="font-bold text-slate-900">{camera}</span>
                </div>
            )}
        </div>
    )
}
