---
/**
 * Section Header Component
 * Consistent section titles across pages
 */
interface Props {
    title: string;
    subtitle?: string;
    align?: "left" | "center";
    class?: string;
}

const { title, subtitle, align = "left", class: className = "" } = Astro.props;

const alignClasses = {
    left: "text-left",
    center: "text-center",
};
---

<div class:list={["mb-8", alignClasses[align], className]}>
    <h2 class="text-2xl md:text-3xl font-black text-slate-900 mb-2">
        {title}
    </h2>
    {subtitle && <p class="text-gray-600 max-w-2xl">{subtitle}</p>}
</div>
