---
interface Props {
    title: string;
    description?: string;
    image?: string;
    jsonLd?: object; // Allow pages to pass custom JSON-LD
}

const {
    title,
    description = "Get the latest gadgets in Kenya. Phones, Laptops & More.",
    image = "/og-image.jpg",
    jsonLd,
} = Astro.props;
import { cartCount } from "../stores/cartStore";
// Note: cartCount is a nanostore, we can't use it directly in SSG HTML for dynamic updates without client JS.
// We will use a react component for the Cart Icon in the Navbar.
import { CartIcon } from "../components/CartIcon";
import { ToastContainer } from "../components/Toast";
import { ErrorBoundary } from "../components/ErrorBoundary";
import "../styles/global.css";

// Enhanced JSON-LD with Organization schema
const defaultJsonLd = {
    "@context": "https://schema.org",
    "@graph": [
        {
            "@type": "WebSite",
            name: "SasaGadgets",
            url: "https://sasagadgets.com",
            potentialAction: {
                "@type": "SearchAction",
                target: "https://sasagadgets.com/?q={search_term_string}",
                "query-input": "required name=search_term_string",
            },
        },
        {
            "@type": "Organization",
            name: "SasaGadgets",
            url: "https://sasagadgets.com",
            logo: "https://sasagadgets.com/og-image.jpg",
            description:
                "Leading tech retailer in Nairobi, Kenya. Buy phones, laptops & gadgets with M-Pesa on delivery.",
            address: {
                "@type": "PostalAddress",
                addressLocality: "Nairobi",
                addressCountry: "KE",
            },
            contactPoint: {
                "@type": "ContactPoint",
                telephone: "+254714389231",
                contactType: "Customer Service",
                availableLanguage: ["English", "Swahili"],
            },
        },
    ],
};

const schemaData = jsonLd || defaultJsonLd;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content={description} />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="manifest" href="/manifest.json" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>

        <!-- Canonical URL -->
        <link rel="canonical" href={Astro.url.href} />

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website" />
        <meta property="og:url" content={Astro.url.href} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={new URL(image, Astro.site)} />

        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content={Astro.url.href} />
        <meta property="twitter:title" content={title} />
        <meta property="twitter:description" content={description} />
        <meta property="twitter:image" content={new URL(image, Astro.site)} />

        <!-- Theme Color -->
        <meta name="theme-color" content="#10b981" />

        <!-- Google Analytics 4 -->
        <script
            async
            src="https://www.googletagmanager.com/gtag/js?id=G-GMV0M5RVXP"
        ></script>
        <script is:inline>
            window.dataLayer = window.dataLayer || [];
            function gtag() {
                dataLayer.push(arguments);
            }
            gtag("js", new Date());
            gtag("config", "G-GMV0M5RVXP");
        </script>

        <!-- Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;800&display=swap"
            rel="stylesheet"
        />

        <!-- Prefetch for faster navigation -->
        <link rel="prefetch" href="/checkout" />
        <link rel="prefetch" href="/blog" />

        <!-- JSON-LD (Flexible Schema) -->
        <script
            type="application/ld+json"
            is:inline
            set:html={JSON.stringify(schemaData)}
        />

        <!-- Service Worker Registration -->
        <script is:inline>
            if ("serviceWorker" in navigator) {
                window.addEventListener("load", () => {
                    navigator.serviceWorker
                        .register("/sw.js")
                        .then((reg) => console.log("SW registered:", reg.scope))
                        .catch((err) =>
                            console.log("SW registration failed:", err),
                        );
                });
            }
        </script>
    </head>
    <body class="bg-slate-50 font-['Outfit'] antialiased text-slate-900">
        <!-- Navbar -->
        <nav
            class="sticky top-0 z-50 bg-white/80 backdrop-blur-md border-b border-gray-100"
        >
            <div
                class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 h-16 flex items-center justify-between"
            >
                <a
                    href="/"
                    class="text-2xl font-black text-slate-900 tracking-tighter"
                >
                    Sasa<span class="text-emerald-500">Gadgets</span>
                </a>

                <div class="flex items-center gap-6">
                    <a
                        href="/"
                        class="font-medium hover:text-emerald-500 transition-colors"
                        >Shop</a
                    >
                    <a
                        href="/blog"
                        class="font-medium hover:text-emerald-500 transition-colors"
                        >Blog</a
                    >
                    <ErrorBoundary client:load>
                        <CartIcon client:idle />
                    </ErrorBoundary>
                </div>
            </div>
        </nav>

        <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 min-h-screen">
            <slot />
        </main>

        <footer class="bg-slate-900 text-white py-12 mt-12">
            <div class="max-w-7xl mx-auto px-4 text-center">
                <p class="text-gray-400">
                    Â© 2025 SasaGadgets. Get Gadgets Now. ðŸš€
                </p>
            </div>
        </footer>

        <!-- Toast Notifications -->
        <ToastContainer client:load />
    </body>
</html>
