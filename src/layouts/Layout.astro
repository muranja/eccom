---
interface Props {
    title: string;
    description?: string;
    image?: string;
    jsonLd?: object;
}

const {
    title,
    description = "Get the latest gadgets in Kenya. Phones, Laptops & More.",
    image = "/og-image.jpg",
    jsonLd,
} = Astro.props;

import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import { ToastContainer } from "../components/Toast";
import "../styles/global.css";

// Enhanced JSON-LD with Organization schema
const defaultJsonLd = {
    "@context": "https://schema.org",
    "@graph": [
        {
            "@type": "WebSite",
            name: "SasaGadgets",
            url: "https://sasagadgets.com",
            potentialAction: {
                "@type": "SearchAction",
                target: "https://sasagadgets.com/?q={search_term_string}",
                "query-input": "required name=search_term_string",
            },
        },
        {
            "@type": "Organization",
            name: "SasaGadgets",
            url: "https://sasagadgets.com",
            logo: "https://sasagadgets.com/og-image.jpg",
            description:
                "Leading tech retailer in Nairobi, Kenya. Buy phones, laptops & gadgets with M-Pesa on delivery.",
            address: {
                "@type": "PostalAddress",
                addressLocality: "Nairobi",
                addressCountry: "KE",
            },
            contactPoint: {
                "@type": "ContactPoint",
                telephone: "+254714389231",
                contactType: "Customer Service",
                availableLanguage: ["English", "Swahili"],
            },
        },
    ],
};

const schemaData = jsonLd || defaultJsonLd;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content={description} />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="manifest" href="/manifest.json" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>

        <!-- Canonical URL -->
        <link rel="canonical" href={Astro.url.href} />

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website" />
        <meta property="og:url" content={Astro.url.href} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={new URL(image, Astro.site)} />

        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content={Astro.url.href} />
        <meta property="twitter:title" content={title} />
        <meta property="twitter:description" content={description} />
        <meta property="twitter:image" content={new URL(image, Astro.site)} />

        <!-- Theme Color -->
        <meta name="theme-color" content="#10b981" />

        <!-- Google Analytics 4 - Deferred for performance -->
        <script is:inline>
            window.dataLayer = window.dataLayer || [];
            function gtag() {
                dataLayer.push(arguments);
            }
            gtag("js", new Date());
            gtag("config", "G-GMV0M5RVXP");
            window.addEventListener("load", function () {
                var s = document.createElement("script");
                s.src =
                    "https://www.googletagmanager.com/gtag/js?id=G-GMV0M5RVXP";
                s.async = true;
                document.head.appendChild(s);
            });
        </script>

        <!-- Prefetch for faster navigation -->
        <link rel="prefetch" href="/checkout" />
        <link rel="prefetch" href="/blog" />
        <link rel="prefetch" href="/shop" />

        <!-- JSON-LD Schema -->
        <script
            type="application/ld+json"
            is:inline
            set:html={JSON.stringify(schemaData)}
        />

        <!-- Service Worker Registration -->
        <script is:inline>
            if ("serviceWorker" in navigator) {
                window.addEventListener("load", () => {
                    navigator.serviceWorker
                        .register("/sw.js")
                        .then((reg) => console.log("SW registered:", reg.scope))
                        .catch((err) =>
                            console.log("SW registration failed:", err),
                        );
                });
            }
        </script>

        <!-- Head slot for page-specific meta tags -->
        <slot name="head" />
    </head>
    <body class="bg-slate-50 antialiased text-slate-900">
        <!-- Navbar -->
        <Navbar />

        <!-- Main Content -->
        <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 min-h-screen">
            <slot />
        </main>

        <!-- Footer -->
        <Footer />

        <!-- Toast Notifications -->
        <ToastContainer client:idle />
    </body>
</html>
